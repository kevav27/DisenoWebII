<div class="login-wrap">
    <div class="login-content">
        <div class="login-logo">
            <a href="#">
                <h2 class="title-1">TRAMSA</h2>
            </a>
        </div>
        <div class="login-form">
            <form action="" method="post">
                <div class="form-group">
                    <label>Usuario</label>
                    <input class="au-input au-input--full" type="username" name="username" placeholder="Usuario">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input class="au-input au-input--full" type="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input class="au-input au-input--full" type="password" name="password" placeholder="Contraseña">
                </div>
                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Sign Up</button>
            </form>
        </div>
    </div>
</div>