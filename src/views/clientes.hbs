<div class="row">
    <div class="col-md-10">
        <div class="overview-wrap">
            <h2 class="title-1">Clientes</h2>
            <form action="/cliente/add">
                <button class="au-btn au-btn-icon au-btn--blue">
                    <i class="zmdi zmdi-plus"></i>REFRESCAR DATA</button>
            </form>
        </div>
    </div>
</div>
<div class="row m-t-25"></div>
<div class="row">
    <div class="col-lg-20" style="width: 780px;">
        <div class="au-card recent-report">
            <div class="au-card-inner">
                <h3 class="title-2">Registro</h3>
                <div class="signup-form">
                    <form action="/cliente/nuevo-cliente" method="POST" class="register-form" id="register-form">
                        <div class="form-input" style="visibility: hidden;">
                            <input type="text" name="codigo_cliente" id="codigo_cliente" value="0" />
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="cliente_Cedula" class="required">Documento de
                                        Identidad</label>
                                    <input type="text" name="documentoIdentidad" id="documentoIdentidad" />
                                </div>
                                <div class="form-input">
                                    <label for="cliente_Name" class="required">Nombre</label>
                                    <input type="text" name="nombre" id="nombre" />
                                </div>
                                <div class="form-input">
                                    <label for="clienteShortName" class="required">Nombre Corto</label>
                                    <input type="text" name="nombreCorto" id="nombreCorto" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="cliente_Date" class="required">Fecha de
                                        Ingreso</label>
                                    <input type="date" name="fechaIngreso" id="fechaIngreso" />
                                </div>
                                <div class="form-input">
                                    <label for="cliente_Email" class="required">Correo
                                        Electrónico</label>
                                    <input type="email" name="correo" id="correo" />
                                </div>
                                <div class="form-input">
                                    <label for="cliente_TelefonoCelular" class="required">Teléfonos</label>
                                    <input type="text" name="telefonos" id="telefonos" />
                                </div>
                                <div class="form-input">
                                    <label for="cliente_Address" class="required">Dirección</label>
                                    <textarea type="text" name="direccion" id="direccion" rows="4"></textarea>
                                </div>

                            </div>
                        </div>
                </div>

                <div class="form-submit">
                    <input type="submit" value="Submit" class="submit" id="submit" name="submit" />
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row m-t-25"></div>

<div class="row">
    <div class="col-md-12">
        <!-- DATA TABLE -->
        <h3 class="title-5 m-b-35">Listado</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
          
            </div>
            <div class="table-data__tool-right">

                <div class="rs-select2--light">
                   <form action="/cliente/obtener-cliente/:"codigo_cliente method="GET" class="form-header" action="" method="">
                        <input class="au-input " type="text" name="codigo_cliente" id="codigo_cliente" placeholder="Buscar" />
                        <button class="au-btn--submit" value="Submit" type="submit">
                            <i class="zmdi zmdi-search"></i>
                        </button>
                    </form>
                </div>



            </div>
        </div>
        <div class="table-responsive table-responsive-data3">
            <table class="table table-data2">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Cédula</th>
                        <th>Nombre Cliente</th>
                        <th>Nombre Corto</th>
                        <th>Fecha de Ingreso</th>
                        <th>Estado</th>
                        <th>Correo Electrónico</th>
                        <th>Teléfono Celular</th>
                        <th>Dirección</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each clientes}}
                    <tr class="tr-shadow">
                        <td>{{this.codigo_cliente}}</td>
                        <td>{{this.documentoIdentidad}}</td>
                        <td>{{this.nombre}}</td>
                        <td>{{this.nombreCorto}}</td>
                        <td>{{this.fechaIngreso}}</td>
                        <td></td>
                        <td>{{this.correo}}</td>
                        <td>{{this.telefonos}}</td>
                        <td>{{this.direccion}}</td>
                        <td>
                            <div class="table-data-feature">
                                 <form action="/cliente/editar/{{codigo_cliente}}">
                                <button class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="zmdi zmdi-edit"></i>
                                </button>
                                </form>
                                <form action="/cliente/eliminar-cliente/{{codigo_cliente}}?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="zmdi zmdi-delete"></i>
                                </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <tr class="spacer"></tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>