<div class="row">
    <div class="col-md-10">
        <div class="overview-wrap">
            <h2 class="title-1">Mantenimiento de Bodegas</h2>
            
        </div>
    </div>
</div>
<div class="row m-t-25"></div>
<div class="row">
    <div class="col-lg-20" style="width: 780px;">
        <div class="au-card recent-report">
            <div class="au-card-inner">
                <h3 class="title-2">Editar</h3>
                <div class="signup-form">
                    <form class="register-form" id="register-form">
                        <div class="form-row">
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="codigo_bodega" class="required">Código de
                                        Bodega</label>
                                    <input type="text" name="codigo_bodega" id="codigo_bodega" />
                                </div>
                                <div class="form-input">
                                    <label for="nombre" class="required">Nombre</label>
                                    <input type="text" name="nombre" id="nombre" />
                                </div>
                                <div class="form-input">
                                    <label for="nombreCorto" class="required">Nombre Corto</label>
                                    <input type="text" name="nombreCorto" id="nombreCorto" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="alias" class="required">Alias</label>
                                    <input type="text" name="alias" id="alias" />
                                </div>
                                <div class="form-input">
                                    <label for="ubicacion" class="required">Ubicación</label>
                                    <textarea type="text" name="ubicacion" id="ubicacion" rows="4"></textarea>
                                </div>
                                <div class="select-list">
                                    <label for="unidadMedida" class="required">Unidad de
                                        Medida</label>
                                    <select name="unidadMedida" id="unidadMedida" class="form-control">
                                        <option value="0">Seleccione una Opción</option>
                                        <option value="1">Metros</option>
                                        <option value="2">Metros Cúbicos</option>
                                        <option value="3">Metros Cuadrados</option>
                                        <option value="4">Litros</option>
                                        <option value="3">Mililitros</option>
                                    </select>
                                </div>
                                <div class="select-list">
                                    <label for="tipoBodega" class="required">Tipo de
                                        Bodega</label>
                                    <select name="tipoBodega" id="tipoBodega" class="form-control">
                                        <option value="0">Seleccione una Opción</option>
                                        <option value="1">Materia Prima</option>
                                        <option value="2">Producto Final</option>
                                    </select>
                                </div>
                                <div class="form-input">
                                    <label for="espacioBodega" class="required">Espacio de
                                        Bodega</label>
                                    <input type="text" name="espacioBodega" id="espacioBodega" />
                                </div>
                            </div>
                        </div>
                </div>
                <div class="form-submit">
                    <input type="submit" value="Actualizar" class="submit" id="submit" name="submit" />
                </div>
                </form>
            </div>
        </div>
    </div>
</div>