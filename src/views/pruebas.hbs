<div class="row">
 <form action="/camion/editar-camion/{{this.codigo_camion}}?_method=PUT" method="POST" class="register-form" id="register-form">
                        <input type="hidden" name="_method" value="PUT">
                        <label> {{camion.descripcion}}</label>
                        <div class="form-row">
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="descripcion" class="required">Descripción</label>
                                    <input type="text" name="descripcion" id="descripcion" value="{{camion.descripcion}}"/>
                                </div>
                                <div class="form-input">
                                    <label for="nombreCorto" class="required">Nombre Corto</label>
                                    <input type="text" name="nombreCorto" id="camionShortName" value="{{camion.nombreCorto}}"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="marca" class="required">Marca</label>
                                    <input type="text" name="marca" id="marca" value="{{camion.marca}}"/>
                                </div>
                                <div class="form-input">
                                    <label for="year" class="required">Año</label>
                                    <input type="text" name="year" id="year" value="{{camion.year}}"/>
                                </div>
                                <div class="form-input">
                                    <label for="placa" class="required">Placa</label>
                                    <input type="text" name="placa" id="placa" value="{{camion.placa}}"/>
                                </div>
                            </div>
                        </div>
                </div>

                <div class="form-submit">
                    <input type="submit" value="Actualizar" class="submit" id="submit" name="submit" />
                </div>
                </form>
</div>