<div class="row">
    <div class="col-md-10">
        <div class="overview-wrap">
            <h2 class="title-1">Flotilla de Camiones</h2>
        </div>
    </div>
</div>
<div class="row m-t-25"></div>
<div class="row">
    <div class="col-lg-20" style="width: 780px;">
        <div class="au-card recent-report">
            <div class="au-card-inner">
                <h3 class="title-2">Editar</h3>
                <div class="signup-form">
                    <form action="" method="POST" class="register-form" id="register-form">
                        <div class="form-row">
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="descripcion" class="required">Descripción</label>
                                    <input type="text" name="descripcion" id="camionName" />
                                </div>
                                <div class="form-input">
                                    <label for="nombreCorto" class="required">Nombre Corto</label>
                                    <input type="text" name="nombreCorto" id="camionShortName" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="marca" class="required">Marca</label>
                                    <input type="text" name="marca" id="marca" />
                                </div>
                                <div class="form-input">
                                    <label for="year" class="required">Año</label>
                                    <input type="text" name="year" id="year" />
                                </div>
                                <div class="form-input">
                                    <label for="placa" class="required">Placa</label>
                                    <input type="text" name="placa" id="placa" />
                                </div>
                            </div>
                        </div>
                </div>

                <div class="form-submit">
                    <input type="submit" value="Actualizar" class="submit" id="submit" name="submit" />
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
