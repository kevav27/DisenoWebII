<div class="row">
    <div class="col-md-10">
        <div class="overview-wrap">
            <h2 class="title-1">Clientes</h2>
            
        </div>
    </div>
</div>
<div class="row m-t-25"></div>
<div class="row">
    <div class="col-lg-20" style="width: 780px;">
        <div class="au-card recent-report">
            <div class="au-card-inner">
                <h3 class="title-2">Editar</h3>
                <div class="signup-form">
                    {{#each cliente}}
                      <form action="/cliente/editar-cliente/{{this.codigo_cliente}}?_method=PUT" method="POST" class="register-form" id="register-form">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-input" style="visibility: hidden;">
                            <input type="text" name="codigo_cliente" id="codigo_cliente" value="0" />
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="cliente_Cedula" class="required">Documento de
                                        Identidad</label>
                                    <input type="text" name="documentoIdentidad" id="documentoIdentidad" value="{{this.documentoIdentidad}}"/>
                                </div>
                                <div class="form-input">
                                    <label for="cliente_Name" class="required">Nombre</label>
                                    <input type="text" name="nombre" id="nombre" value="{{this.nombre}}"/>
                                </div>
                                <div class="form-input">
                                    <label for="clienteShortName" class="required">Nombre Corto</label>
                                    <input type="text" name="nombreCorto" id="nombreCorto" value="{{this.nombreCorto}}"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="cliente_Date" class="required">Fecha de
                                        Ingreso</label>
                                    <input type="date" name="fechaIngreso" id="fechaIngreso" value="{{this.fechaIngreso}}"/>
                                </div>
                                <div class="form-input">
                                    <label for="cliente_Email" class="required">Correo
                                        Electrónico</label>
                                    <input type="email" name="correo" id="correo" value="{{this.correo}}"/>
                                </div>
                                <div class="form-input">
                                    <label for="cliente_TelefonoCelular" class="required">Teléfonos</label>
                                    <input type="text" name="telefonos" id="telefonos" value="{{telefonos}}"/>
                                </div>
                                <div class="form-input">
                                    <label for="cliente_Address" class="required">Dirección</label>
                                    <textarea type="text" name="direccion" id="direccion" value="{{this.direccion}}" rows="4"></textarea>
                                </div>

                            </div>
                        </div>
                </div>

                <div class="form-submit">
                    <input type="submit" value="Submit" class="submit" id="submit" name="submit" />
                </div>
                </form>
                {{/each}}
            </div>
        </div>
    </div>
</div>