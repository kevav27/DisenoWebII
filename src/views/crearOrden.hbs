<div class="row m-t-25"></div>
<div class="row">
    <div class="col-lg-20" style="width: 780px;">
        <div class="au-card recent-report">
            <div class="au-card-inner">
                <h3 class="title-2">Registro</h3>
                <div class="signup-form">
                    <form class="register-form" id="register-form">
                        <div class="form-row">
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="pedido_NumeroFactura" class="required">Número de Factura</label>
                                    <input type="text" name="pedido_NumeroFactura" id="pedido_NumeroFactura" />
                                </div>
                                <div class="form-input">
                                    <label for="pedido_Date" class="required">Fecha de la Orden</label>
                                    <input type="date" name="pedido_Date" id="pedido_Date" />
                                </div>
                                <div class="select-list">
                                    <label for="pedido_Proveedor" class="required">Proveedor</label>
                                    <select name="pedido_Proveedor" id="pedido_Proveedor" class="form-control">
                                        <option value="0">Seleccione una Opción</option>
                                        <option value="1"></option>
                                        <option value="2"></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                </div>

                <div class="form-submit">
                    <input type="submit" value="Submit" class="submit" id="submit" name="submit" />
                    <input type="submit" value="Reset" class="submit" id="reset" name="reset" />
                </div>
                </form>
            </div>
        </div>
    </div>

</div>
<div class="row">
