<div class="row">
    <div class="col-md-10">
        <div class="overview-wrap">
            <h2 class="title-1">Mantenimiento de Roles</h2>

        </div>
    </div>
</div>
<div class="row m-t-25"></div>

<div class="row">

    <div class="col-lg-20" style="width: 780px;">
        <div class="au-card recent-report">
            <div class="au-card-inner">
                <h3 class="title-2">Editar</h3>
                <div class="signup-form">
                    <form class="register-form" id="register-form">
                        <div class="form-row">
                            <div class="form-group">
                                <div class="form-input">
                                    <label for="codigo_rol" class="required">Código Rol</label>
                                    <input type="text" name="codigo_rol" id="codigo_rol" />
                                </div>
                                <div class="form-input">
                                    <label for="nombreRol" class="required">Nombre de
                                        Rol</label>
                                    <input type="text" name="nombreRol" id="nombreRol" />
                                </div>
                                <div class="form-input">
                                    <label for="nombreCorto" class="required">Nombre
                                        Corto</label>
                                    <input type="text" name="nombreCorto" id="nombreCorto" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="select-list">
                                    <label for="rolesDisponibles" class="required">Eventos
                                        Disponibles</label>
                                    <select name="rolesDisponibles" id="rolesDisponibles" class="form-control">
                                        <option value="0">Seleccione una Opción</option>
                                        <option value="1"></option>
                                        <option value="2"></option>
                                        <option value="3"></option>
                                        <option value="4"></option>
                                        <option value="3"></option>
                                    </select>
                                </div>
                                <div class="select-list">
                                    <label for="rolesAsignados" class="required">Eventos
                                        Asignados</label>
                                    <select name="rolesAsignados" id="rolesAsignados" class="form-control">
                                        <option value="0">Seleccione una Opción</option>
                                        <option value="1"></option>
                                        <option value="2"></option>
                                        <option value="3"></option>
                                        <option value="4"></option>
                                        <option value="3"></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                </div>
                <div class="form-submit">
                    <input type="submit" value="Actualizar" class="submit" id="submit" name="submit" />
                </div>
                </form>
            </div>
        </div>
    </div>
</div>